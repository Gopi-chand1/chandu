@model IEnumerable<MVCApplication.Models.EventModel>

@{
    ViewData["Title"] = "MyEvents";
}

<h1>MyEvents</h1>

<p>
    <a asp-action="CreateEvent">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                    @Html.ActionLink(@item.Title,"GetEvent", new { id = item.EventId })
             </td>
        
            <td>
                @Html.ActionLink("Edit", "EditEvent", new { id = item.EventId })|
              
                
                    @Html.ActionLink("Details", "GetEvent", new { id=item.EventId })|
                    @Html.ActionLink("Delete", "DeleteEvent", new { eventId = item.EventId })
            
            </td>

        </tr>
}
    </tbody>
</table>
